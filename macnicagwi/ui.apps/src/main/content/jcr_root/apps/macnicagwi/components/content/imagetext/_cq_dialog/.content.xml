<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Properties"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <imagetext
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Content"
                        sling:resourceType="granite/ui/components/foundation/section"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <assetType
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                                fieldLabel="Image"
                                                name="./assetType"
                                                vertical="{Boolean}false">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <Image
                                                        jcr:primaryType="nt:unstructured"
                                                        checked="{Boolean}true"
                                                        text="Image"
                                                        value="Image"/>
                                                </items>
                                            </assetType>
                                            <Type
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                                fieldLabel="Resizable Image"
                                                name="./assetType"
                                                vertical="{Boolean}false">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <resizableimage
                                                        jcr:primaryType="nt:unstructured"
                                                        checked="{Boolean}false"
                                                        text="Resizable Image"
                                                        value="resizableimage"/>
                                                </items>
                                            </Type>
                                            <optionalItemsText
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/heading"
                                                level="4"
                                                text="Add optional Items​"/>
                                            <isHeading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="${not empty cqDesign.isHeading ? cqDesign.isHeading : false}"
                                                name="./isHeading"
                                                text="Heading"
                                                uncheckedValue="false"
                                                value="{Boolean}true"/>
                                            <isText
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="${not empty cqDesign.isText ? cqDesign.isText : false}"
                                                name="./isText"
                                                text="Text"
                                                uncheckedValue="false"
                                                value="{Boolean}true"/>
                                            <isButton
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                checked="${not empty cqDesign.isButton ? cqDesign.isButton : false}"
                                                name="./isButton"
                                                text="Button"
                                                uncheckedValue="false"
                                                value="{Boolean}true"/>
                                            <id
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="HTML ID attribute to apply to the component."
                                                fieldLabel="ID"
                                                name="./id"/>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </imagetext>
                    <layout
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Content"
                        sling:resourceType="granite/ui/components/foundation/section"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <assetPositionLargeScreen
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                                fieldLabel="Large Screen Image position​"
                                                name="./assetPositionLargeScreen"
                                                vertical="{Boolean}false">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <positionLeft
                                                        jcr:primaryType="nt:unstructured"
                                                        checked="{Boolean}true"
                                                        text="Left"
                                                        value="left"/>
                                                    <positionRight
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Right"
                                                        value="right"/>
                                                    <positionLargeScreenTop
                                                        jcr:primaryType="nt:unstructured"
                                                        checked="{Boolean}true"
                                                        text="Top"
                                                        value="top"/>
                                                    <positionLargeScreenBottom
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Bottom"
                                                        value="bottom"/>    
                                                </items>
                                            </assetPositionLargeScreen>
                                            <assetPositionMediumScreen
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                                fieldLabel="Medium Screen Image position​"
                                                name="./assetPositionMediumScreen"
                                                vertical="{Boolean}false">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <positionTop
                                                        jcr:primaryType="nt:unstructured"
                                                        checked="{Boolean}true"
                                                        text="Top"
                                                        value="top"/>
                                                    <positionBottom
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Bottom"
                                                        value="bottom"/>
                                                </items>
                                            </assetPositionMediumScreen>
                                            <assetPositionSmallScreen
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                                fieldLabel="Small Screen Image position​"
                                                name="./assetPositionSmallScreen"
                                                vertical="{Boolean}false">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <smallScreenPositionTop
                                                        jcr:primaryType="nt:unstructured"
                                                        checked="{Boolean}true"
                                                        text="Top"
                                                        value="top"/>
                                                    <smallScreenPositionBottom
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Bottom"
                                                        value="bottom"/>
                                                </items>
                                            </assetPositionSmallScreen>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </layout>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
